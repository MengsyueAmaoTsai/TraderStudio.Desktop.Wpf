<Window x:Class="RichillCapital.TraderStudio.Desktop.Views.MainWindow"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=False}"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RichillCapital.TraderStudio.Desktop"
        xmlns:viewModels="clr-namespace:RichillCapital.TraderStudio.Desktop.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowStartupLocation="CenterScreen"
        d:Height="450" 
        d:Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="Modules">
                <MenuItem 
                    Header="Instruments"
                    Command="{Binding ShowInstrumentsWindowCommand}"/>
                
                <MenuItem 
                    Header="Signal sources"
                    Command="{Binding ShowSignalSourcesWindowCommand}"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
